{
  "name": "suitecrm-listview-extender",
  "version": "1.1.0",
  "description": "Tools for building",
  "main": "none",
  "repository": "git@github.com:strangedev/suitecrm-listview-extender.git",
  "author": "Noah Hummel <oss@noahhummel.consulting>",
  "license": "Apache-2.0",
  "private": false,
  "devDependencies": {
    "glob": "^7.1.6",
    "mustache": "^3.1.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "mkdir-build": "yarn run clean && mkdir -p build",
    "copy-sources": "yarn run mkdir-build && rsync -vr --exclude='*.mustache*' plugin/* build",
    "render-templates": "node templates.js ./plugin/modules.mustachedata.json modules name",
    "pack-plugin": "yarn run copy-sources && yarn run render-templates && cd build && zip -r lvextender.zip *",
    "build": "yarn run pack-plugin"
  }
}
